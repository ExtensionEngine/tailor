<mjml>
  <mj-include path="./components/head.mjml" />
  <mj-body padding="10px">
    <mj-include path="./components/header.mjml" />
    <mj-section padding="10px 10px 20px 10px" text-align="left">
      <mj-column padding-bottom="15px" border-bottom="1px solid #ccc">
        <mj-text mj-class="content" padding-left="0" color="#444" font-size="16px">
          Weekly activity digest for {repo Name}
        </mj-text>
      </mj-column>
    </mj-section>
    <mj-raw>
      {% for revision in var:revisions %}
    </mj-raw>
    <mj-section padding="0 10px" background-color="#f1f1f1">
      <mj-column>
        <mj-text mj-class="content" padding="20px" color="#444" font-size="16px">
          <b>{{revision.repository}}</b>
        </mj-text>
      </mj-column>
      <mj-column background-color="#f1f1f1" border-radius="8px">
        <mj-text mj-class="content" padding="20px" color="#444" font-size="16px">
          Created:
        </mj-text>
        <mj-text mj-class="content" padding="20px" color="#444" font-size="16px">
          Updated:
        </mj-text>
        <mj-text mj-class="content" padding="20px" color="#444" font-size="16px">
          Removed:
        </mj-text>
      </mj-column>
      <mj-column background-color="#f1f1f1" border-radius="8px">
        <mj-text mj-class="content" padding="20px" color="#444" font-size="16px">
          {{revision.createdCount}}
        </mj-text>
        <mj-text mj-class="content" padding="20px" color="#444" font-size="16px">
          {{revision.updatedCount}}
        </mj-text>
        <mj-text mj-class="content" padding="20px" color="#444" font-size="16px">
          {{revision.removedCount}}
        </mj-text>
      </mj-column>
    </mj-section>
    <mj-raw>
      {% endfor %}
    </mj-raw>
  </mj-body>
</mjml>